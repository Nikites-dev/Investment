<Page x:Class="Investment.PagesApp.UserMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Investment.PagesApp"
      mc:Ignorable="d" 
        MaxHeight="1080"
        MaxWidth="1920"
        
        MinHeight="1080"
        MinWidth="1920"
      
      Title="UserMain">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="7*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock
            Text="Брокерский счет"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Grid.Column="1"
            FontSize="40"
          />

        <StackPanel
            Orientation="Horizontal"
            Height="30"
            HorizontalAlignment="Right"
            Grid.Column="1"
            VerticalAlignment="Center"
            >
            <Button x:Name="BtnMain" Content="Main" Margin="30, 0,30,0" Padding="30, 0, 30, 0"></Button>
            <Button x:Name="BtnStocks" Content="Stocks"  Margin="30, 0,30,0" Padding="30, 0, 30, 0" Click="BtnStocks_Click"></Button>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <StackPanel Orientation="Horizontal">

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Баланс"/>
                    <TextBlock Text="10 000 р"/>
                </StackPanel>

                <StackPanel Margin="500, 0, 0, 0">
                    <TextBlock  Text="За все время:"/>
                    <TextBlock Text="-4 703,00 р (8,94%)"/>
                </StackPanel>
                
               
                
               
            </StackPanel>
            <ScrollViewer Grid.Row="1" Grid.Column="1" Height="750" Margin="0, 50, 0, 0" Background="LightBlue">
            </ScrollViewer>
        </StackPanel>
        
        
        
    </Grid>
</Page>
